.title {
  position: fixed;
  width: 100vw;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
  height: 32px;
  z-index: 999;
  left: 10rpx;
}

.title .back {
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%) scale(0.5);
  width: 42rpx;
  height: 70rpx;
  padding: 30rpx;
  background-size: 100% 100%;
  background-clip: content-box;
}

.title .back .btn {
  background-color: aqua;
  width: 100%;
  height: 100%;
  transform: translateX(-30rpx);
}

.title .text {
  width: 100%;
  height: 100%;
  text-align: center;
  color: #b1ae29;
}
